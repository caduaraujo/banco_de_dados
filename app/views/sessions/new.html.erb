
<div class="jumbotron">


   <h4 id=”alert”, class="text-white" ><%= alert %></h4>
  <hr class="my-3">
  <%= form_tag sessions_path, method: 'post' do  %>
  <div class="form-group">
    <%= label_tag 'Email', 'Email', class:"text-white"%>
    <%= text_field_tag :email,params[:email], class: 'form-control' , placeholder:"usuario@exemplo.com"%>
  </div>

  <div class="form-group">
    <%= label_tag 'Email', 'Senha', class:"text-white"%>
    <%= text_field_tag :password,params[:password], class: 'form-control', type:"password", placeholder:"Digite sua senha" %>
  </div>

    <div class=”actions”>
      <%= submit_tag "Login", class:"btn btn-primary btn-lg" %>
    </div>
    </br>
    <%= link_to "Novo usuário", new_user_path, class:"text-white" %>

    <% end %>


</div>
